<t t-name="l10n_bo_bill.ProgressModalTemplate">
    <div t-if="state.isVisible" class="modal-overlay">
        <div class="modal-content">
            <h3>Sincronizando Datos...</h3>
            <div class="progress-bar-container">
                <div class="progress-bar" t-att-style="'width:' + state.progress + '%'">
                    <span t-esc="Math.round(state.progress) + '%'"/>
                </div>
            </div>
        </div>
    </div>
</t>
