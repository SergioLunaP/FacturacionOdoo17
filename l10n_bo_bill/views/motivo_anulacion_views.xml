<odoo>
    <!-- Vista Formulario -->
    <record id="view_motivo_anulacion_form" model="ir.ui.view">
        <field name="name">motivo.anulacion.form</field>
        <field name="model">l10n_bo_bill.motivo_anulacion</field>
        <field name="arch" type="xml">
            <form string="Motivos de Anulación">
                <sheet>
                    <group>
                        <field name="external_id" invisible="1"/>
                        <field name="codigo_clasificador"/>
                        <field name="descripcion"/>
                        <field name="codigo_tipo_parametro"/>
                    </group>
                </sheet>
            </form>
        </field>
    </record>

    <!-- Vista Tree -->
    <record id="view_motivo_anulacion_tree" model="ir.ui.view">
        <field name="name">motivo.anulacion.list</field>
        <field name="model">l10n_bo_bill.motivo_anulacion</field>
        <field name="type">list</field> 
        <field name="arch" type="xml">
            <list string="Motivos de Anulación">
                <field name="codigo_clasificador"/>
                <field name="descripcion"/>
                <field name="codigo_tipo_parametro"/>
            </list>
        </field>
    </record>

    <!-- Acción para abrir la vista -->
    <record id="action_motivo_anulacion" model="ir.actions.act_window">
        <field name="name">Motivos de Anulación</field>
        <field name="res_model">l10n_bo_bill.motivo_anulacion</field>
        <field name="view_mode">list,form</field>
    </record>

    <!-- Acción del servidor para la sincronización -->
    <record id="action_motivos_anulacion_sync" model="ir.actions.server">
        <field name="name">Sincronizar Motivos de Anulación</field>
        <field name="model_id" ref="model_l10n_bo_bill_motivo_anulacion"/>
        <field name="state">code</field>
        <field name="code">model.obtener_motivos_anulacion_desde_api()</field>
    </record>
</odoo>
