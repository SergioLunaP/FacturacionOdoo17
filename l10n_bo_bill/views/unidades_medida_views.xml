<odoo>
    <!-- Vista Formulario -->
    <record id="view_unidades_medida_form" model="ir.ui.view">
        <field name="name">unidades.medida.form</field>
        <field name="model">l10n_bo_bill.unidades_medida</field>
        <field name="arch" type="xml">
            <form string="Unidades de Medida">
                <header>
                    <button name="obtener_unidades_medida_desde_api" type="object" string="Sincronizar" class="btn-primary"/>
                </header>
                <sheet>
                    <group>
                        <field name="external_id" invisible="1"/>
                        <field name="codigo_clasificador"/>
                        <field name="descripcion"/>
                        <field name="codigo_tipo_parametro"/>
                    <!--     <button string="Test Notificaci贸n" type="object" name="action_test_sticky" class="oe_highlight"/> -->

                    </group>
                </sheet>
            </form>
        </field>
    </record>

    <!-- Vista Tree -->
    <record id="view_unidades_medida_tree" model="ir.ui.view">
        <field name="name">unidades.medida.tree</field>
        <field name="model">l10n_bo_bill.unidades_medida</field>
        <field name="arch" type="xml">
            <tree string="Unidades de Medida">
                <field name="codigo_clasificador"/>
                <field name="descripcion"/>
                <field name="codigo_tipo_parametro"/>
            </tree>
        </field>
    </record>

    <!-- Acci贸n para abrir la vista -->
    <record id="action_unidades_medida" model="ir.actions.act_window">
        <field name="name">Unidades de Medida</field>
        <field name="res_model">l10n_bo_bill.unidades_medida</field>
        <field name="view_mode">tree,form</field>
    </record>

    <!-- Acci贸n del servidor para la sincronizaci贸n -->
    <record id="action_unidades_medida_sync" model="ir.actions.server">
        <field name="name">Sincronizar Unidades de Medida</field>
        <field name="model_id" ref="model_l10n_bo_bill_unidades_medida"/>
        <field name="state">code</field>
        <field name="code">model.obtener_unidades_medida_desde_api()</field>
    </record>
</odoo>
