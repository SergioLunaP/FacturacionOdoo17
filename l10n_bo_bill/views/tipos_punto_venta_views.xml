<odoo>
    <!-- Vista Formulario -->
    <record id="view_tipos_punto_venta_form" model="ir.ui.view">
        <field name="name">tipos.punto.venta.form</field>
        <field name="model">l10n_bo_bill.tipos_punto_venta</field>
        <field name="arch" type="xml">
            <form string="Tipos de Punto de Venta">
                <sheet>
                    <group>
                        <field name="external_id" invisible="1"/>
                        <field name="codigo_clasificador"/>
                        <field name="descripcion"/>
                        <field name="codigo_tipo_parametro"/>
                    </group>
                </sheet>
            </form>
        </field>
    </record>

    <!-- Vista Tree -->
    <record id="view_tipos_punto_venta_tree" model="ir.ui.view">
        <field name="name">tipos.punto.venta.tree</field>
        <field name="model">l10n_bo_bill.tipos_punto_venta</field>
        <field name="arch" type="xml">
            <tree string="Tipos de Punto de Venta">
                <field name="codigo_clasificador"/>
                <field name="descripcion"/>
                <field name="codigo_tipo_parametro"/>
            </tree>
        </field>
    </record>

    <!-- Acción para abrir la vista -->
    <record id="action_tipos_punto_venta" model="ir.actions.act_window">
        <field name="name">Tipos de Punto de Venta</field>
        <field name="res_model">l10n_bo_bill.tipos_punto_venta</field>
        <field name="view_mode">tree,form</field>
    </record>

    <!-- Acción del servidor para la sincronización -->
    <record id="action_tipos_punto_venta_sync" model="ir.actions.server">
        <field name="name">Sincronizar Tipos de Punto de Venta</field>
        <field name="model_id" ref="model_l10n_bo_bill_tipos_punto_venta"/>
        <field name="state">code</field>
        <field name="code">model.obtener_tipos_punto_venta_desde_api()</field>
    </record>
</odoo>
