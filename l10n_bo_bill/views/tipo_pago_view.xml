<odoo>
    <record id="view_payment_type_form" model="ir.ui.view">
        <field name="name">tipo.pago.form</field>
        <field name="model">l10n_bo_bill.tipo_pago</field>
        <field name="arch" type="xml">
            <form string="Tipos de Pago">
                <sheet>
                    <group>
                        <field name="name"/>
                        <field name="codigo_clasificador"/>
                        <field name="code"/>
                    </group>
                </sheet>
            </form>
        </field>
    </record>

    <record id="view_payment_type_tree" model="ir.ui.view">
        <field name="name">tipo.pago.list</field>
        <field name="model">l10n_bo_bill.tipo_pago</field>
        <field name="type">list</field> 
        <field name="arch" type="xml">
            <list string="Tipos de Pago">
                <field name="name"/>
                <field name="codigo_clasificador"/>
                <field name="code"/>
            </list>
        </field>
    </record>

    <!-- AcciÃ³n para abrir la vista -->
    <record id="action_payment_type" model="ir.actions.act_window">
        <field name="name">Tipos de Pago</field>
        <field name="res_model">l10n_bo_bill.tipo_pago</field>
        <field name="view_mode">list,form</field>
    </record>

    <record id="action_payment_type_sync" model="ir.actions.server">
        <field name="name">Sincronizar Tipos de Pago</field>
        <field name="model_id" ref="model_l10n_bo_bill_tipo_pago"/>
        <field name="state">code</field>
        <field name="code">model.obtener_tipos_pago_desde_api()</field>
    </record>
</odoo>
