<odoo>
    <!-- Vista en árbol para Punto de Venta -->
    <record id="view_punto_venta_tree" model="ir.ui.view">
        <field name="name">punto.venta.list</field>
        <field name="model">l10n_bo_bill.punto_venta</field>
        <field name="type">list</field> 
        <field name="arch" type="xml">
            <list>
                <field name="codigo"/>
                <field name="nombre"/>
                <field name="id_sucursal"/>
                <field name="punto_venta_principal"/>
            </list>
        </field>
    </record>

    <!-- Vista en formulario para Punto de Venta -->
    <record id="view_punto_venta_form" model="ir.ui.view">
        <field name="name">punto.venta.form</field>
        <field name="model">l10n_bo_bill.punto_venta</field>
        <field name="arch" type="xml">
            <form>
                <header>
                    <button name="obtener_nuevo_cufd_desde_api" type="object" string="Generar CUFD" class="btn-primary"/>
                </header>
                <sheet>
                    <group>
                        <group>
                            <field name="codigo"/>
                            <field name="nombre"/>
                        </group>
                        <group>
                            <field name="id_sucursal"/>
                            <field name="descripcion"/>
                        </group>
                        <group>
                            <field name="tipo"/>
                            <field name="cuis_activo_id" readonly="1" options="{'no_create': True}"/>
                        </group>
                        <group>
                            <field name="punto_venta_principal"/>
                        </group>
                    </group>
                    <notebook>
                        <!-- Página para registrar los CUFD relacionados -->
                        <page string="CUFD">
                            <field name="cufd_ids">
                                <list editable="bottom">
                                    <field name="codigo"/>
                                    <field name="codigo_control"/>
                                    <field name="fecha_inicio"/>
                                    <field name="fecha_vigencia"/>
                                    <field name="vigente"/>
                                </list>
                                <form>
                                    <group>
                                        <group>
                                            <field name="codigo"/>
                                            <field name="codigo_control"/>
                                        </group>
                                        <group>
                                            <field name="fecha_inicio"/>
                                            <field name="fecha_vigencia"/>
                                        </group>
                                        <group>
                                            <field name="vigente"/>
                                        </group>
                                    </group>
                                </form>
                            </field>
                        </page>
                    </notebook>
                </sheet>
            </form>
        </field>
    </record>

    <!-- Acción para el menú de Punto de Venta -->
    <record id="action_punto_venta" model="ir.actions.act_window">
        <field name="name">Puntos de Venta</field>
        <field name="res_model">l10n_bo_bill.punto_venta</field>
        <field name="view_mode">list,form</field>
    </record>
</odoo>
