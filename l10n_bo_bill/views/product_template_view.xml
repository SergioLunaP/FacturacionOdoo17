<odoo>
    <!-- Heredamos la vista formulario de producto.template -->
    <record id="view_product_form_inherit_api" model="ir.ui.view">
        <field name="name">product.template.form.inherit.api</field>
        <field name="model">product.template</field>
        <field name="inherit_id" ref="product.product_template_only_form_view"/>
        <field name="arch" type="xml">
            <!-- Insertamos los nuevos campos después del campo default_code (Referencia Interna) -->
            <xpath expr="//field[@name='default_code']" position="after">
                <field name="unidad_medida_id" options="{'no_create': True}" placeholder="Seleccionar Unidad de Medida"/>
                <field name="codigo_producto_id" options="{'no_create': True}" placeholder="Seleccionar Código Producto SIN"/>
                <field name="external_id" invisible="1"/>
            </xpath>

            <xpath expr="//field[@name='default_code']" position="attributes">
                <attribute name="required">True</attribute>
            </xpath>
        </field>
    </record>

    <record id="action_obtener_productos_desde_api" model="ir.actions.server">
        <field name="name">Obtener Productos desde la API</field>
        <field name="model_id" ref="product.model_product_template"/>
        <field name="state">code</field>
        <field name="code">model.obtener_productos_desde_api()</field>
    </record>

</odoo>
