<odoo>
    <!-- Vista Formulario -->
    <record id="view_pais_origen_form" model="ir.ui.view">
        <field name="name">pais.origen.form</field>
        <field name="model">l10n_bo_bill.pais_origen</field>
        <field name="arch" type="xml">
            <form string="País de Origen">
                <sheet>
                    <group>
                        <field name="external_id" invisible="1"/>
                        <field name="codigo_clasificador"/>
                        <field name="descripcion"/>
                        <field name="codigo_tipo_parametro"/>
                    </group>
                </sheet>
            </form>
        </field>
    </record>

    <!-- Vista Tree -->
    <record id="view_pais_origen_tree" model="ir.ui.view">
        <field name="name">pais.origen.tree</field>
        <field name="model">l10n_bo_bill.pais_origen</field>
        <field name="arch" type="xml">
            <tree string="Países de Origen">
                <field name="codigo_clasificador"/>
                <field name="descripcion"/>
                <field name="codigo_tipo_parametro"/>
            </tree>
        </field>
    </record>

    <!-- Acción para abrir la vista -->
    <record id="action_pais_origen" model="ir.actions.act_window">
        <field name="name">Países de Origen</field>
        <field name="res_model">l10n_bo_bill.pais_origen</field>
        <field name="view_mode">tree,form</field>
    </record>

    <!-- Acción del servidor para la sincronización -->
    <record id="action_paises_origen_sync" model="ir.actions.server">
        <field name="name">Sincronizar Países de Origen</field>
        <field name="model_id" ref="model_l10n_bo_bill_pais_origen"/>
        <field name="state">code</field>
        <field name="code">model.obtener_paises_origen_desde_api()</field>
    </record>
</odoo>
