<odoo>
    <!-- Vista Formulario -->
    <record id="view_evento_significativo_form" model="ir.ui.view">
        <field name="name">evento.significativo.form</field>
        <field name="model">l10n_bo_bill.evento_significativo</field>
        <field name="arch" type="xml">
            <form string="Eventos Significativos">
                <sheet>
                    <group>
                        <field name="external_id" invisible="1"/>
                        <field name="codigo_clasificador"/>
                        <field name="descripcion"/>
                        <field name="codigo_tipo_parametro"/>
                    </group>
                </sheet>
            </form>
        </field>
    </record>

    <!-- Vista Tree -->
    <record id="view_evento_significativo_tree" model="ir.ui.view">
        <field name="name">evento.significativo.tree</field>
        <field name="model">l10n_bo_bill.evento_significativo</field>
        <field name="arch" type="xml">
            <tree string="Eventos Significativos">
                <field name="codigo_clasificador"/>
                <field name="descripcion"/>
                <field name="codigo_tipo_parametro"/>
            </tree>
        </field>
    </record>

    <!-- Acción para abrir la vista -->
    <record id="action_evento_significativo" model="ir.actions.act_window">
        <field name="name">Eventos Significativos</field>
        <field name="res_model">l10n_bo_bill.evento_significativo</field>
        <field name="view_mode">tree,form</field>
    </record>

    <!-- Acción del servidor para la sincronización -->
    <record id="action_eventos_significativos_sync" model="ir.actions.server">
        <field name="name">Sincronizar Eventos Significativos</field>
        <field name="model_id" ref="model_l10n_bo_bill_evento_significativo"/>
        <field name="state">code</field>
        <field name="code">model.obtener_eventos_significativos_desde_api()</field>
    </record>

</odoo>
