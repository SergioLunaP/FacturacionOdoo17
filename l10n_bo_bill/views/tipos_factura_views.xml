<odoo>
    <!-- Vista Formulario -->
    <record id="view_tipos_factura_form" model="ir.ui.view">
        <field name="name">tipos.factura.form</field>
        <field name="model">l10n_bo_bill.tipos_factura</field>
        <field name="arch" type="xml">
            <form string="Tipos de Factura">
                <sheet>
                    <group>
                        <field name="external_id" invisible="1"/>
                        <field name="codigo_clasificador"/>
                        <field name="descripcion"/>
                        <field name="codigo_tipo_parametro"/>
                    </group>
                </sheet>
            </form>
        </field>
    </record>

    <!-- Vista Tree -->
    <record id="view_tipos_factura_tree" model="ir.ui.view">
        <field name="name">tipos.factura.list</field>
        <field name="model">l10n_bo_bill.tipos_factura</field>
        <field name="type">list</field> 
        <field name="arch" type="xml">
            <list string="Tipos de Factura">
                <field name="codigo_clasificador"/>
                <field name="descripcion"/>
                <field name="codigo_tipo_parametro"/>
            </list>
        </field>
    </record>

    <!-- Acción para abrir la vista -->
    <record id="action_tipos_factura" model="ir.actions.act_window">
        <field name="name">Tipos de Factura</field>
        <field name="res_model">l10n_bo_bill.tipos_factura</field>
        <field name="view_mode">list,form</field>
    </record>

    <!-- Acción del servidor para la sincronización -->
    <record id="action_tipos_factura_sync" model="ir.actions.server">
        <field name="name">Sincronizar Tipos de Factura</field>
        <field name="model_id" ref="model_l10n_bo_bill_tipos_factura"/>
        <field name="state">code</field>
        <field name="code">model.obtener_tipos_factura_desde_api()</field>
    </record>
</odoo>
