<odoo>
    <!-- Vista en árbol para Sucursal -->
    <record id="view_sucursal_tree" model="ir.ui.view">
        <field name="name">sucursal.tree</field>
        <field name="model">l10n_bo_bill.sucursal</field>
        <field name="arch" type="xml">
            <tree>
                <field name="codigo"/>
                <field name="departamento"/>
                <field name="direccion"/>
                <field name="municipio"/>
                <field name="nombre"/>
                <field name="telefono"/>
            </tree>
        </field>
    </record>

    <!-- Vista en formulario para Sucursal -->
    <record id="view_sucursal_form" model="ir.ui.view">
        <field name="name">sucursal.form</field>
        <field name="model">l10n_bo_bill.sucursal</field>
        <field name="arch" type="xml">
            <form>
                <header>
                    <button name="action_sync_puntos_venta" type="object" string="Sincronizar Punto Venta" class="btn-primary"/>
                </header>
                <sheet>
                    <group>
                        <group>
                            <field name="codigo"/>
                            <field name="departamento"/>
                        </group>
                        <group>
                            <field name="direccion"/>
                            <field name="municipio"/>
                        </group>
                        <group>
                            <field name="nombre"/>
                            <field name="telefono"/>
                        </group>
                        <group>
                            <field name="id_empresa"/>
                        </group>
                    </group>
                    <notebook>
                        <!-- Página para registrar los Puntos de Venta relacionados -->
                        <page string="Puntos de Venta">
                            <field name="puntos_venta_ids">
                                <tree editable="bottom">
                                    <field name="codigo"/>
                                    <field name="nombre"/>
                                    <field name="tipo"/>
                                </tree>
                                <form>
                                    <group>
                                        <group>
                                            <field name="codigo"/>
                                            <field name="nombre"/>
                                        </group>
                                        <group>
                                            <field name="tipo"/>
                                            <field name="descripcion"/>
                                        </group>
                                    </group>
                                </form>
                            </field>
                        </page>
                    </notebook>
                </sheet>
            </form>
        </field>
    </record>

    <!-- Acción para el menú de Sucursal -->
    <record id="action_sucursal" model="ir.actions.act_window">
        <field name="name">Sucursales</field>
        <field name="res_model">l10n_bo_bill.sucursal</field>
        <field name="view_mode">tree,form</field>
    </record>

</odoo>
