<odoo>
    <record id="view_contingencia_wizard_form" model="ir.ui.view">
        <field name="name">contingencia.wizard.form</field>
        <field name="model">contingencia.wizard</field>
        <field name="arch" type="xml">
            <form string="Confirmación de Contingencia">
                <group>
                    <field name="pregunta" string="¿Desea entrar en modo de contingencia?" readonly="1"/>
                </group>
                <footer>
                    <button name="action_confirmar_contingencia" string="Aceptar" type="object" class="btn-primary"/>
                    <button name="action_cancelar" string="Cancelar" type="object" class="btn-secondary"/>
                </footer>
            </form>
        </field>
    </record>
</odoo>
