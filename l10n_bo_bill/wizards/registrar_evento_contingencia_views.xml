<odoo>
    <record id="view_registrar_evento_contingencia_wizard_form" model="ir.ui.view">
        <field name="name">registrar.evento.contingencia.wizard.form</field>
        <field name="model">registrar.evento.contingencia.wizard</field>
        <field name="arch" type="xml">
            <form string="Registrar Evento de Contingencia">
                <group>
                    <field name="evento_significativo_id" required="1"/>
                    <field name="descripcion" required="1"/>
                    
                    <!-- Campo invisible para permitir que 'mostrar_fechas' funcione en las expresiones de visibilidad -->
                    <field name="mostrar_fechas" invisible="1"/>

                    <field name="fecha_hora_inicio" invisible="not mostrar_fechas" />
                    <field name="fecha_hora_fin" invisible="not mostrar_fechas" />
                </group>
                <footer>
                    <button name="action_confirmar_registro_evento" string="Registrar Evento" type="object" class="btn-primary"/>
                    <button string="Cancelar" class="btn-secondary" special="cancel"/>
                </footer>
            </form>
        </field>
    </record>

    <record id="action_registrar_evento_contingencia_wizard" model="ir.actions.act_window">
        <field name="name">Registrar Evento Contingencia</field>
        <field name="res_model">registrar.evento.contingencia.wizard</field>
        <field name="view_mode">form</field>
        <field name="target">new</field>
    </record>
</odoo>
