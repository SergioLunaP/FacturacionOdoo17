<odoo>
    <data noupdate="1">
        <record id="ir_cron_obtener_cufd_diario" model="ir.cron">
            <field name="name">Obtener CUFD Diario</field>
            <field name="model_id" ref="l10n_bo_bill.model_l10n_bo_bill_cufd"/>
            <field name="state">code</field>
            <field name="code">model.cron_obtener_cufd_diario()</field>
            <field name="interval_number">1</field>
            <field name="interval_type">days</field>
            <field name="active" eval="True"/>
            <!-- 07:00 Bolivia (UTC-4) = 11:00 UTC -->
            <field name="nextcall" eval="(DateTime.now() + relativedelta(hours=11)).strftime('%Y-%m-%d %H:%M:%S')"/>
        </record>
    </data>
</odoo>
